<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgn"
    tools:context="com.bingo.bingomaster.bingomovil.BingoManagerActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/contenedor_informacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Administraci贸n de cartones de bingo"
                android:textAppearance="@android:style/TextAppearance.WindowTitle"
                android:textSize="22sp"/>

            <TextView
                android:id="@+id/lblModo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrar" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/contendedor_opciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/btnRegistrar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="btnRegistrarClick"
                android:text="Registrar"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btnRemover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="btnRemoverClick"
                android:text="Remover"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btnLibre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="btnLibreClick"
                android:text="Libre"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btnConsultar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="btnConsultarClick"
                android:text="Consultar"
                android:textAllCaps="false"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblProgresivo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Progresivo" />

                <EditText
                    android:id="@+id/txtProgresivo"
                    android:layout_width="252dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Progresivo"
                    android:inputType="number"
                    android:selectAllOnFocus="false"
                    android:singleLine="true"
                    android:text="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblModulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="M贸dulo" />

                <EditText
                    android:id="@+id/txtModulo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="M贸dulo"
                    android:inputType="text" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lyScanner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnScanner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="btnScannerClick"
                android:text="Scanner"
                android:textAllCaps="false"/>

            <TextView
                android:id="@+id/lblObservaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Informaci贸n"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/lblReporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btnsalir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="btnSalirClick"
                android:text="Salir"
                android:textAllCaps="false"/>
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
